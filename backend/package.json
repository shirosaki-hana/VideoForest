{
  "name": "backend",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "shirosaki-hana",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "typecheck": "pnpm -w exec tsc --project backend/tsconfig.json --noEmit --pretty",
    "build": "pnpm clean && pnpm db:generate && pnpm run typecheck && node ./esbuild.config.mjs && cpy \"src/database/prismaclient/**\" \"dist/database/prismaclient/\"",
    "clean": "rimraf dist && rimraf src/database/prismaclient/",
    "clean:cache": "rimraf temp",
    "lint": "pnpm -w exec eslint backend/",
    "lint:fix": "pnpm -w exec eslint backend/ --fix",
    "format": "pnpm -w exec prettier --write backend/",
    "format:check": "pnpm -w exec prettier --check backend/",
    "db:status": "prisma migrate status --config prisma/prisma.config.mjs",
    "db:dev": "prisma migrate dev --config prisma/prisma.config.mjs",
    "db:deploy": "prisma migrate deploy --config prisma/prisma.config.mjs",
    "db:generate": "prisma generate --no-hints",
    "db:studio": "prisma studio --config prisma/prisma.config.mjs",
    "db:reset": "prisma migrate reset --config prisma/prisma.config.mjs"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/adapter-better-sqlite3": "^7.0.1",
    "@prisma/client": "^7.1.0",
    "@prisma/client-runtime-utils": "^7.1.0",
    "@videoforest/types": "workspace:*",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.2",
    "esbuild": "^0.27.0",
    "fastify": "^5.6.2",
    "ms": "^2.1.3",
    "prisma": "^7.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0"
  }
}
